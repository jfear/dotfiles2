[core]
    autocrlf = input
    safecrlf = true
    editor = nvim
    excludesFile = ~/.gitignore_global

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[github]
    user = jfear

[push]
    default = simple

[url "https://github.com/"]
    insteadOf = gh:

[url "https://gist.github.com/"]
    insteadOf = gist:

[url "https://bitbucket.org/"]
    insteadOf = bb:

[alias]
	new = !git init && git symbolic-ref HEAD refs/heads/default

[pull]
	rebase = false
